@using Core.Domain.Model;
@model IList<Student>

@{
    ViewData["Title"] = "Students";
}

<div class="container-fluid list-student">
    <div class="d-flex justify-content-between my-2">
        <h2>Students</h2>
        <a asp-action="Create" class="btn btn-primary add-student-btn">Add Student</a>
    </div>
    <table class="table">
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Name</td>
                <td class="char-buttons">
                    <a asp-action="Details" asp-route-id="@student.Id" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@student.Id" class="btn btn-warning">Edit</a>

                    <!--Modal -->
                    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal">
                        Delete
                    </button>

                    <!-- Modal -->
                    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h1 class="modal-title fs-5" id="exampleModalLabel">Delete Product</h1>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    Are you sure you want to delete this student?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                    <a asp-action="Delete" asp-route-id="@student.Id"><button type="button" class="btn btn-primary">Delete</button></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </table>
</div>
